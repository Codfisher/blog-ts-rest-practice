{
  "name": "api-server",
  "version": "0.1.0",
  "private": true,
  "description": "基於 NestJS、MongoDB 之伺服器",
  "author": "",
  "license": "UNLICENSED",
  "files": [
    ".gcloudignore",
    "app.stage.yaml",
    "app.yaml",
    "dist",
    "env"
  ],
  "scripts": {
    "gcp-build": "",
    "prebuild": "rimraf dist",
    "build": "nest build --webpack",
    "format": "",
    "start": "node dist/main.js",
    "dev": "npm run prebuild && nest start --watch --webpack",
    "start:debug": "nest start --debug --watch",
    "start:prod": "nest start",
    "deploy": "gcloud app deploy app.yaml --project=project-code --quiet",
    "deploy:dispatch": "gcloud app deploy dispatch.yaml --project=project-code --quiet",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --detectOpenHandles --forceExit",
    "test:clear": "jest --clearCache",
    "test:watch": "npm run test:clear && jest --watch --detect-open-handles",
    "test:cov": "jest --coverage",
    "isolate": "isolate",
    "blueprint": "vite-node scripts/create-blueprint.ts"
  },
  "dependencies": {
    "@google-cloud/logging-winston": "6.0.1",
    "@google-cloud/secret-manager": "6.1.0",
    "@google-cloud/storage": "7.16.0",
    "@keyv/mongo": "3.0.3",
    "@nestjs/cache-manager": "3.0.1",
    "@nestjs/common": "11.1.5",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.5",
    "@nestjs/devtools-integration": "0.2.0",
    "@nestjs/event-emitter": "3.0.1",
    "@nestjs/jwt": "11.0.0",
    "@nestjs/mapped-types": "2.1.0",
    "@nestjs/mongoose": "11.0.3",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-express": "11.1.5",
    "@nestjs/serve-static": "5.0.3",
    "@nestjs/swagger": "11.2.0",
    "@ts-rest/core": "*",
    "@ts-rest/nest": "3.52.1",
    "await-to-js": "3.0.0",
    "bcryptjs": "3.0.2",
    "cache-manager": "7.0.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "compression": "1.8.1",
    "cookie-parser": "1.4.7",
    "dayjs": "1.11.13",
    "express": "5.1.0",
    "firebase-admin": "13.4.0",
    "flat": "5.0.2",
    "form-data": "4.0.4",
    "helmet": "8.1.0",
    "jsonwebtoken": "9.0.2",
    "just-diff": "6.0.2",
    "keyv": "5.4.0",
    "lodash": "4.17.21",
    "mongoose": "8.16.4",
    "mongoose-autopopulate": "1.1.0",
    "ms": "2.1.3",
    "nanoid": "3.3.10",
    "nest-winston": "1.10.2",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "passport-local": "1.0.0",
    "reflect-metadata": "0.2.2",
    "remeda": "^2.21.2",
    "rimraf": "6.0.1",
    "rxjs": "7.8.2",
    "winston": "3.17.0",
    "zod": "*"
  },
  "devDependencies": {
    "@antfu/eslint-config": "*",
    "@nestjs/cli": "11.0.5",
    "@nestjs/schematics": "11.0.2",
    "@nestjs/testing": "11.0.11",
    "@project-code/shared": "workspace:*",
    "@swc/core": "1.11.11",
    "@swc/jest": "0.2.37",
    "@types/bcryptjs": "2.4.6",
    "@types/compression": "1.7.5",
    "@types/cookie-parser": "1.4.7",
    "@types/express": "5.0.0",
    "@types/flat": "5.0.5",
    "@types/fs-extra": "11.0.4",
    "@types/jest": "29.5.14",
    "@types/lodash": "4.17.16",
    "@types/multer": "1.4.12",
    "@types/node": "*",
    "@types/passport-jwt": "4.0.1",
    "@types/passport-local": "1.0.38",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "8.8.1",
    "@typescript-eslint/parser": "7.18.0",
    "eslint": "9.11.1",
    "fs-extra": "11.3.0",
    "isolate-package": "1.23.0",
    "jest": "29.7.0",
    "mongodb-memory-server": "10.1.4",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "ts-jest": "29.2.6",
    "ts-loader": "9.5.2",
    "tsconfig-paths": "4.2.0",
    "type-fest": "4.41.0",
    "typescript": "*",
    "unplugin-swc": "1.5.1",
    "vite-node": "3.0.9",
    "webpack-node-externals": "3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s?$": [
        "@swc/jest"
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ]
  }
}